<link rel="stylesheet" href="/css/home.css" >
<div id="bodyDiv">
    <%- include('_side_menu') %>
    <div id="contentDiv">
        <%- include('_spinner_overlay') %>
        <h3>Batches data</h3>
        <!-- Table showing batches data -->
        <table id="batchesTable" class="stripe">
            <thead>
                <tr>
                    <td>Name</td>
                </tr>
            </thead>
            <tbody id="batchesTbody">
                <% for(i of batches){ %>
                    <tr>
                        <td><%= i.name %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>    
    </div>
</div>
<script>
    $('#overlay').fadeIn();
    $(document).ready( function () {
        // setting up batch list table    
        $('#batchesTable').DataTable({
            "initComplete": function(settings, json) {
                $('#overlay').fadeOut();
            }
        });
    } );
</script>

